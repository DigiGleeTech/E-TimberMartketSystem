@model IEnumerable<Rocky.Models.ApplicationUser>

@{
    ViewData["Title"] = "Shipping Details";
}



 <div class="panel-group" id="accordion">
 <div class="card">
    <div class="card-header bg-dark text-light">
      <h4 class="card-title row">
        <div class="col-3 img-thumbnail text-left">
            <button data-toggle="collapse" data-parent="#accordion" class="btn btn-block" href="#ShippingDetails">
                <i class="fas fa-car"></i>  Shipping Details
             </button>
        </div>
         <div class="col-4 offset-5 img-thumbnail text-right">
            <a asp-action="Create" class="btn ">
                <i class="fas fa-plus"></i> &nbsp; Add Shipping Details
            </a>
        </div>
      </h4>
    </div>
    <div id="ShippingDetails" class="card-body collapse in">
      <div class="card-body">
          @if (Model.Count() > 0 && @ViewBag.product != null)
            {
                <h1>Shipping Details</h1>
                <table class="table table-responsive">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ShipOrder.PostCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShipOrder.HouseNoOrBuilding)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShipOrder.Street)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShipOrder.Country)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShipOrder.State)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShipOrder.Lga)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipOrder.PostCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipOrder.HouseNoOrBuilding)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipOrder.Street)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipOrder.Country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipOrder.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipOrder.Lga)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ShipOrder.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ShipOrder.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ShipOrder.Id">Delete</a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
            }
            else
            {
            <p>
                <a asp-action="Create">Add Shipping Details</a>
            </p>

            }
      </div>
    </div>
  </div>
