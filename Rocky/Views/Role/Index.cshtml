@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "Roles";
}   

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Role List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="UpsertRole" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Role
            </a>
        </div>
    </div>


    <table class="table table-striped table-bordered m-25">
        <thead>
            <tr>
                <th>Role Name</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var role in Model)
            {
             <tr>
                    <td>
                        @role.Name
                </td>
                <td>
                     <div class="w-75 btn-group" role="group">
                        <a asp-route-Id="@role.Id" asp-action="Edit" class="btn btn-primary mx-2">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-route-Id="@role.Id" asp-action="Delete" id="Delete" class="btn btn-danger mx-2">
                            <i class="far fa-trash-alt"></i>
                        </a>
                     </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts{
    <script>
$(document).ready(function() {
    $("#Delete").click(function() {
        alert("clicked");
        confirm('<h2 class="text-danger">Do you really wanna delete this?</h2>')
    });
});
    </script>
}